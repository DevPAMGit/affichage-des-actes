<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://www.alfresco.org/model/dictionary/1.0" name="erreur59:erreur">
    <description>Modèles d'erreurs pour l'affichage des actes du CD59</description>
    <author>ANDRIANAIVO Michel</author>
    <imports>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
    </imports>
    <namespaces>
        <namespace uri="http://cd59.fr/model/erreur59/1.0." prefix="erreur59"/>
    </namespaces>

    <aspects>

        <aspect name="erreur59:dossierActeInfo">
            <title>Informations</title>
            <description>Informations un dossier d'acte</description>
            <mandatory-aspects>
                <aspect>erreur59:infosBaseSas</aspect>
            </mandatory-aspects>
        </aspect>

        <aspect name="erreur59:fichierActeInfo">
            <title>Informations</title>
            <description>Informations un fichier d'acte</description>
            <mandatory-aspects>
                <aspect>erreur59:infosBaseSas</aspect>
            </mandatory-aspects>
        </aspect>

        <aspect name="erreur59:infosBaseSas">
            <title>Message d'information</title>
            <description>Message d'information</description>
            <properties>

                <!-- DATE DE L'INFORMATION -->
                <property name="erreur59:dateInfoSas">
                    <title>Date</title>
                    <description>La date de la dernière information</description>
                    <type>d:date</type>
                    <mandatory>true</mandatory>
                </property>
                <!-- FIN - DATE DE L'INFORMATION -->

                <!-- MESSAGE D'INFORMATION -->
                <property name="erreur59:messageInfoSas">
                    <title>Message</title>
                    <description>Message informatif sur l'élément</description>
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <!-- FIN - MESSAGE D'INFORMATION -->

                <!-- ETAT DE L'ELEMENT -->
                <property name="erreur59:etatInfoSas">
                    <title>Etat</title>
                    <description>Etat du dossier</description>
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <default>EN ATTENTE</default>
                    <constraints>
                        <constraint name="erreur59:etatSasListe" type="LIST">
                            <parameter name="allowedValues">
                                <list>
                                    <value>OK</value>
                                    <value>ERREUR</value>
                                </list>
                            </parameter>
                        </constraint>
                    </constraints>
                </property>
                <!-- FIN - ETAT DE L'ELEMENT -->

            </properties>
        </aspect>

    </aspects>
</model>