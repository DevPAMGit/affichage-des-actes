<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://www.alfresco.org/model/dictionary/1.0" name="affichage59:affichage">
    <description>Modèles pour l'affichage des actes du CD59</description>
    <author>ANDRIANAIVO MICHEL</author>
    <imports>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
    </imports>
    <namespaces>
        <namespace uri="http://cd59.fr/model/affichage59/1.0." prefix="affichage59"/>
    </namespaces>

    <constraints>

        <!-- CONTRAINTES SUR OPTIONS -->
        <constraint name="affichage59:etatOption" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>Affiché</value>
                    <value>Prêt à être envoyer</value>
                    <value>Erreur lors de l'envoie</value>
                    <value>Envoyé mais erreur lors la récupération du résultat du webservice</value>
                </list>
            </parameter>
        </constraint>
        <!-- FIN - CONTRAINTES SUR OPTIONS -->

    </constraints>

    <aspects>

        <!-- ASPECT - AFFICHAGE -->
        <aspect name="affichage59:affichage">

            <title>Envoie</title>
            <description>Informations sur l'envoie de l'acte.</description>

            <!-- PROPRIETES -->
            <properties>

                <!-- ÉTAT -->
                <property name="affichage59:etat">
                    <title>État</title>
                    <description>L'état d'affichage</description>
                    <type>d:text</type>
                    <mandatory>true</mandatory>

                    <!-- LISTE DES CONTRAINTES DE L'ÉTAT -->
                    <constraints>
                        <constraint ref="affichage59:etatOption"/>
                    </constraints>
                    <!-- FIN - LISTE DES CONTRAINTES DE L'ÉTAT -->

                </property>
                <!-- FIN - ETAT -->

                <!-- DATE -->
                <property name="affichage59:tentativeEnvoi">
                    <title>La dernière date tentative d'envoi</title>
                    <type>d:date</type>
                    <mandatory>false</mandatory>
                </property>
                <!-- FIN - DATE -->

            </properties>
            <!-- FIN - PROPRIETES -->

        </aspect>
        <!-- FIN - ASPECT - AFFICHAGE -->
        
        <!-- ASPECT - INFORMATION AFFICHAGE -->
        <aspect name="affichage59:informationAffichage">

            <title>Information sur l'affichage</title>
            <description>Information sur l'affichage de l'acte.</description>

            <!-- PROPRIETES -->
            <properties>

                <!-- DATE DE L'AFFICHAGE -->
                <property name="affichage59:dateAffichage">

                    <title>Date d'affichage</title>
                    <description>La date d'affichage de l'acte</description>

                    <type>d:date</type>
                    <mandatory>true</mandatory>

                </property>
                <!-- FIN - DATE DE L'AFFICHAGE -->

                <!-- URL D'AFFICHAGE  -->
                <property name="affichage59:urlAffichage">

                    <title>L'URL d'affichage de l'acte</title>
                    <description>L'URL d'affichage de l'acte</description>

                    <type>d:text</type>
                    <mandatory>true</mandatory>

                </property>
                <!-- FIN - URL D'AFFICHAGE  -->

            </properties>
            <!-- FIN - PROPRIETES -->
        </aspect>
        <!-- FIN ASPECT - INFORMATION AFFICHAGE -->

        <!-- ASPECT - ERREUR -->
        <aspect name="affichage59:erreur">

            <title>Erreur d'affichage</title>
            <description>Les erreurs d'affichage</description>

            <properties>

                <!-- -->
                <property name="affichage59:erreurAffichageMessage">
                    <title>Message</title>
                    <description>Message d'erreur</description>

                    <type>d:text</type>
                    <mandatory>true</mandatory>

                </property>

            </properties>

        </aspect>
        <!-- FIN ASPECT - ERREUR -->

    </aspects>

</model>